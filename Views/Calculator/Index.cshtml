@{
    ViewData["Title"] = "Calculator";
}

<h2>Calculator</h2>

<!-- Form for console calculation -->
<form method="post" asp-action="Calculate">
    <div class="form-group">
        <label for="expression">Enter Expression:</label>
        <input type="text" class="form-control" id="expression" name="expression" />
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (ViewBag.Result != null)
{
    <div class="alert alert-success mt-3">
        <strong>Result:</strong> @ViewBag.Result
    </div>
}

<!-- Form for file calculation -->
<form method="post" asp-action="CalculateFromFile" enctype="multipart/form-data">
    <div class="form-group mt-4">
        <label for="file">Upload File:</label>
        <input type="file" class="form-control" id="file" name="file" />
    </div>
    <button type="submit" class="btn btn-primary">Calculate from File</button>
</form>

@if (ViewBag.ResultFilePath != null)
{
    <div class="alert alert-success mt-3">
        <strong>Result File Path:</strong> @ViewBag.ResultFilePath
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">
        <strong>Error:</strong> @ViewBag.Error
    </div>
}

